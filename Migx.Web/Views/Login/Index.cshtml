@{
    ViewBag.Title = "Migx, me empresta?";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="">
        <div class="container">
            <div class="row">
                <img class="logoLogin" src="@Url.Content("~/Content/Images/logo.png")" />
            </div>
            <br />
            <div class="row">
                <div class="span6 center">
                    <form class="formlogin" method="post" action="@Url.Action("login","login")">
                        <div class="espaco">
                            <label for="inputEmail">Login</label>
                            <input type="email" id="inputEmail"  name="email" class="form-control" placeholder="seu e-mail" required autofocus />
                        </div>

                        <div class="espaco">
                            <label for="inputPass">Senha</label>
                            <input type="password" id="inputPass" name="senha" class="form-control" required />
                        </div>

                        <div class="espaco">
                            <button class="btn btn-lg btn-block" type="submit">Entrar</button>
                        </div>

                        <div class="text-center espaco">
                            <label for="cadastrese">----- OU -----</label> <br />
                            @Html.ActionLink("Cadastre-Se", "cadastrar", null, null)
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
</body>
</html>

